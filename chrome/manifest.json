{
  "name": "WTF-UAH",
  "version": "0.25",
  "manifest_version": 2,
  "description": "Web Timeout Friend for UAHuntsville's online services.",
  "homepage_url": "https://github.com/ctag/wtf_uah",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": ["src/bg/background.js"],
    "persistent": false
  },
  "permissions": [
    "tabs",
    "alarms",
    "*://*/*",
    "https://*.uah.edu:9021/*"
  ]
}
